{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "lib": [
      "ES2021"
    ],
    "allowJs": true,
    "sourceMap": true,
    "outDir": "./build",
    // "rootDirs": [
    //   "src",
    //   "tests"
    // ],
    // "rootDir": "./",
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@src/*":[
        "./src/*"
      ],
      "@tests/*":[
        "./tests/*"
      ]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  }
  // ,
  // "include": [
  //   "src/**/*",
  //   "tests/**/*"
  // ]
}